<%- include('../components/header/index.ejs') %> <%-
include('../components/sidebar/index.ejs') %> <%-
include('../components/topbar/index.ejs') %>

<div class="container-fluid">
  <!-- Page Heading -->

  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
      Detail Soal <%= dataSoal.tipeSoal %> <%= materiSoal.materiSoal %>
    </h1>
  </div>

  <!-- Content Row -->

  <!-- TABLES -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <form action="" method="post" enctype="multipart/form-data">
        <div class="soal-container">
          <div class="form-group">
            <label style="font-size: 1.5em" for="soal>"
              >Soal Nomor <%= dataSoal.nomorSoal %>
            </label>
            <textarea
              type="text"
              class="form-control"
              id="soal"
              name="soal"
              placeholder="Enter soal <%= dataSoal.nomorSoal %>"
              autocomplete="off"
            >
<%= dataSoal.soal %></textarea
            >
          </div>
          <div class="form-group">
            <label for="formFile" class="form-label">File</label>

            <% if(dataSoal.path){ %>
            <small>saat ini : <%= dataSoal.path %> </small>
            <% }else{ %>
            <small>Tidak Ada File</small>
            <% } %>
            <input class="form-control" type="file" id="formFile" name="file"  multiple/>
          </div>
          <div class="form-group">
            <label for="formFile" class="form-label">File</label>

            

          <div class="form-group">
            <label for="option1">Option 1</label>
            <input
              type="text"
              class="form-control"
              id="option1"
              name="option1"
              placeholder="option1"
              autocomplete="off"
              value="<%= dataSoal.option1 %>"
            />
          </div>
          <div class="form-group">
            <label for="option2">Option 1</label>
            <input
              type="text"
              class="form-control"
              id="option2"
              name="option2"
              placeholder="option2"
              autocomplete="off"
              value="<%= dataSoal.option2 %>"
            />
          </div>
          <div class="form-group">
            <label for="option3">Option 1</label>
            <input
              type="text"
              class="form-control"
              id="option3"
              name="option3"
              placeholder="option3"
              autocomplete="off"
              value="<%= dataSoal.option3 %>"
            />
          </div>
          <div class="form-group">
            <label for="option4">Option 1</label>
            <input
              type="text"
              class="form-control"
              id="option4"
              name="option4"
              placeholder="option4"
              autocomplete="off"
              value="<%= dataSoal.option4 %>"
            />
          </div>

          <div class="form-group col-2">
            <label for="jawabanBenar">Jawaban yang Benar</label>
            <input
              type="text"
              class="form-control"
              name="jawabanBenar"
              autocomplete="off"
              value="<%= dataSoal.jawabanBenar %>"
            />
          </div>
          <div class="form-group">
            <label for="pembahasan">Pembahasan Soal</label>
            <textarea
              type="text"
              class="form-control"
              id="pembahasan"
              name="pembahasan"
              placeholder="pembahasan"
              autocomplete="off"
            >
<%= dataSoal.pembahasan %> </textarea
            >
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Ubah</button>
      </form>
    </div>
  </div>
  <!-- Content Row -->
</div>

<%- include('../components/footer/index.ejs') %>
