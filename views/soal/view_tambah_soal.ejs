<%- include('../components/header/index.ejs') %> <%-
include('../components/sidebar/index.ejs') %> <%-
include('../components/topbar/index.ejs') %>

<div class="container-fluid">
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Tambah Soal <%= tipeSoal %></h1>
  </div>

  <!-- Content Row -->

  <!-- TABLES -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <form action="" method="post" enctype="multipart/form-data">
        <div class="soal-container">
          <div class="form-group">
            <label style="font-size: 1.5em" for="soal>"
              >Soal Nomor <%= nomorSoal %>
            </label>
            <textarea
              type="text"
              class="form-control"
              id="soal"
              name="soal"
              placeholder="Enter soal <%= nomorSoal %>"
              autocomplete="off"
            ></textarea>
          </div>
          <div class="form-group">
            <label for="formFile" class="form-label">File</label>
            <small>(Kosongkan apabila tanpa file)</small>
            <input class="form-control" type="file" id="formFile" name="file" />
          </div>

          <% for(let i = 1; i<5;i++){ %>
          <div class="form-group">
            <label for="option<%= i %> ">Option <%= i %> </label>
            <input
              type="text"
              class="form-control"
              id="option<%= i %>"
              name="option<%= i %>"
              placeholder="option<%= i %>"
              autocomplete="off"
            />
          </div>
          <% } %> <% for(let i = 1; i<5;i++){ %>
          <div class="form-group">
            <label for="optionpicture<%= i %> ">Optionpicture <%= i %> </label>
            <input
              type="file"
              class="form-control"
              id="optionpicture<%= i %>"
              name="optionpicture"
              placeholder="optionpicture<%= i %>"
              autocomplete="off"
            />
          </div>
          <% } %>

          <div class="form-group col-2">
            <label for="jawabanBenar">Jawaban yang Benar</label>
            <select class="form-control" name="jawabanBenar" id="jawabanBenar">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
            </select>
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>

  <!-- Content Row -->
</div>

<%- include('../components/footer/index.ejs') %>
